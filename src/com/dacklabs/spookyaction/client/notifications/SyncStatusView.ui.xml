<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style ui:field="style" type="com.dacklabs.spookyaction.client.notifications.SyncStatusView.Style">
		.statusContainer {
			border-radius: 3px;
			padding: 4px;
			position: absolute;
			right: 2px;
			top: 2px;
		}
		
		.healthy {
			background-color: #00ff00;
			color: black;
		}
		
		.gettingBehind {
			background-color: #ffff00;
			color: black;
		}
		
		.unhealthy {
			background-color: #ff0000;
			color: white;
		}
	</ui:style>
	<g:HTMLPanel ui:field="statusContainer" styleName="{style.statusContainer}">
	   <span ui:field="statusText"></span>
	</g:HTMLPanel>
</ui:UiBinder> 