<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:editor="urn:import:com.dacklabs.spookyaction.client.editor">
	<ui:style ui:field="style" type="com.dacklabs.spookyaction.client.editor.EditorView.Style">
		.editor {
			height: 100%;
			position: relative;
		}
		
		.editor-txt {
			background-color: #404040;
			color: #CAE682;
			font-family: "Ubuntu Mono",monospace;
			font-size: 15px;
			height: 100%;
			padding: 5px;
		}
		
		.save-button {
			float: right;
		}
		
		.line {
			display: block;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.editor}">
		<g:Button ui:field="saveButton" text="Save" addStyleNames="{style.save-button}" />
		<g:FocusPanel ui:field="focusPanel" styleName="{style.editor-txt}" >
    	  <g:FlowPanel ui:field="editorPanel" />
		</g:FocusPanel>
	</g:FlowPanel>
</ui:UiBinder> 