<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:editor="urn:import:com.dacklabs.spookyaction.client.editor">
	<ui:style>
		.editor {
			bottom: 5px;
			left: 5px;
			position: absolute;
			right: 5px;
			top: 50px;
		}
		
		.editor-txt {
			background-color: blue;
			color: white;
			bottom: 0px;
			left: 0px;
			position: absolute;
			right: 0px;
			top: 200px;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.editor}">
		<g:Button ui:field="saveButton" />
		<g:FocusPanel ui:field="textArea" styleName="{style.editor-txt}" >
          <g:FlowPanel>
            <g:HTMLPanel>No data yet...</g:HTMLPanel>
          </g:FlowPanel>
		</g:FocusPanel>
	</g:FlowPanel>
</ui:UiBinder> 