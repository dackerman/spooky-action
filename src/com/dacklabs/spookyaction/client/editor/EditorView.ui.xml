<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:editor="urn:import:com.dacklabs.spookyaction.client.editor">
	<ui:style>
		.editor {
			height: 100%;
		}
		
		.editor-txt {
			background-color: #404040;
			color: #CAE682;
			height: 100%;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.editor}">
		<g:Button ui:field="saveButton" text="Save" />
		<g:FocusPanel ui:field="textArea" styleName="{style.editor-txt}" >
          <g:FlowPanel>
            <g:HTMLPanel>No data yet...</g:HTMLPanel>
          </g:FlowPanel>
		</g:FocusPanel>
	</g:FlowPanel>
</ui:UiBinder> 