<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.editor {
			bottom: 5px;
			left: 5px;
			position: absolute;
			right: 5px;
			top: 50px;
		}
		
		.editor-text {
			bottom: 0px;
			left: 0px;
			position: absolute;
			right: 0px;
			top: 0px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.editor}">
		<g:TextArea ui:field="fileContents" styleName="{style.editor-text}" />
	</g:HTMLPanel>
</ui:UiBinder> 