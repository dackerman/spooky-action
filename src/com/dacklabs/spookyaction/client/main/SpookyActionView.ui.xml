<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:client="urn:import:com.dacklabs.spookyaction.client">
	<ui:style>
		.left-container {
			height: 100%;
			left: 0px;
			position: absolute;
			right: 210px;
		}
		
		.right-container {
            height: 100%;
            position: absolute;
            right: 0px;
            width: 200px;
        }
	</ui:style>
	<g:HTMLPanel>
	
	  <g:HTMLPanel addStyleNames="{style.left-container}">
        <client:fileselector.FileSelector ui:field="fileSelector" />
        <client:editor.Editor ui:field="editor" />
	  </g:HTMLPanel>
	  
	  <g:HTMLPanel addStyleNames="{style.right-container}" >
	    <h2>Command Stats</h2>
	    <client:stats.StatsViewer ui:field="stats" />
	  </g:HTMLPanel>
	  
	</g:HTMLPanel>
</ui:UiBinder> 